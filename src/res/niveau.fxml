<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.collections.FXCollections ?>

<BorderPane styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<center>
		<AnchorPane fx:id="pane" focusTraversable="true" onKeyPressed="#keyPressed" onKeyReleased="#keyReleased" onMouseClicked="#mouseClicked" onScroll="#zoom" prefHeight="746.0" prefWidth="937.0">
			<children>
				<VBox prefHeight="62.0" prefWidth="1167.0">
					<children>
						<ImageView fitHeight="61.0" fitWidth="1119.0" styleClass="#pane">
							<image>
								<Image url="@titleeditor.png" />
							</image>
						</ImageView>
					</children>
				</VBox>
			</children>
			<styleClass>
				<String fx:value="editeur-jeu" />
				<String fx:value="jeu-root" />
			</styleClass>
		</AnchorPane>
	</center>
	<bottom>
		<HBox alignment="CENTER" prefHeight="112.0" prefWidth="1294.0" styleClass="editeur-menu-bas" BorderPane.alignment="CENTER">
			<children>
				<Button fx:id="retour" mnemonicParsing="false" onAction="#retour" text="Retour">
					<HBox.margin>
						<Insets />
					</HBox.margin>
				</Button>
				<Button fx:id="sauve" mnemonicParsing="false" onAction="#sauve" text="Sauvegarder" />
				<Button fx:id="buttonCharger" mnemonicParsing="false" onAction="#charge" text="Charger" />
				<Button fx:id="erase" mnemonicParsing="false" onAction="#erase" text="Effacer" textFill="RED" />
				<ChoiceBox fx:id="choiceBoxCorps" prefHeight="40.0" prefWidth="150.0" />
			</children>
		</HBox>
	</bottom>
	<right>
		<VBox fx:id="vBoxMenu" alignment="TOP_CENTER" prefHeight="746.0" prefWidth="200.0" styleClass="editeur-menu-droite">
			<children>
				<Label styleClass="editeur-label" text="Masse" />
				<TextField fx:id="textFieldMasse" onAction="#onMasse" prefHeight="25.0" prefWidth="200.0" />
				<Label styleClass="editeur-label" text="Position X">
					<VBox.margin>
						<Insets />
					</VBox.margin>
				</Label>
				<TextField fx:id="textFieldPositionX" onAction="#onPositionX" prefHeight="25.0" prefWidth="119.0" />
				<Label styleClass="editeur-label" text="Position Y" />
				<TextField fx:id="textFieldPositionY" onAction="#onPositionY" prefHeight="25.0" prefWidth="119.0" />
				<Pane prefHeight="200.0" prefWidth="200.0">
					<children>
						<VBox fx:id="vBoxMenuPlanete" prefHeight="200.0" prefWidth="200.0" styleClass="editeur-menu-droite">
							<children>
            				<Label styleClass="editeur-label" text="Texture">
            					<VBox.margin>
            						<Insets top="20.0" />
            					</VBox.margin>
            				</Label>
            				<ComboBox fx:id="comboBoxTexture" onAction="#onTexture" prefHeight="25.0" prefWidth="200.0"/>
								<Label styleClass="editeur-label" text="Rayon" />
								<TextField fx:id="textFieldRayon" onAction="#onRayon" prefHeight="25.0" prefWidth="119.0" />
							</children>
						</VBox>
						<VBox fx:id="vBoxMenuVaisseau" prefHeight="200.0" prefWidth="200.0" styleClass="editeur-menu-droite" visible="false" />
					</children>
				</Pane>
			</children>
		</VBox>
	</right>
</BorderPane>
