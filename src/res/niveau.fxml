         <children>
            <Label styleClass="labelTitre" text="Texture">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <ChoiceBox fx:id="choiceBoxTexture" prefHeight="40.0" prefWidth="150.0" styleClass="selector" />
            <Label styleClass="labelTitre" text="Masse" />
            <TextField fx:id="textFieldMasse" prefHeight="25.0" prefWidth="119.0" styleClass="textfield" />
