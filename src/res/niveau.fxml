            </Label>
            <TextField fx:id="textFieldPositionX" prefHeight="25.0" prefWidth="119.0" styleClass="textfield" />
            <Label styleClass="labelTitre" text="Position Y" />
            <TextField fx:id="textFieldPositionY" prefHeight="25.0" prefWidth="119.0" styleClass="textfield" />
            <Pane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <VBox fx:id="vBoxMenuPlanete" prefHeight="200.0" prefWidth="200.0" styleClass="menuVbox" visible="false">
                     <children>
                        <Label styleClass="labelTitre" text="Rayon" />
                        <TextField fx:id="textFieldRayon" prefHeight="25.0" prefWidth="119.0" styleClass="textfield" />
                     </children>
                  </VBox>
                  <VBox fx:id="vBoxMenuVaisseau" prefHeight="200.0" prefWidth="200.0" styleClass="menuVbox" visible="false" />
               </children>
            </Pane>
         </children>
      </VBox>
   </right>
